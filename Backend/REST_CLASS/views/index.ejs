<%- include('includes/head.ejs') %>

<body>
  <h1>Quora Posts</h1>
  <% for(let i of posts){ %>
  <div class="post">
    <h2 class="user">@<%= i['username'] %></h2>
    <p class="content"><%= i['content'] %></p>
    <a class="details-btn" href="http://localhost:8080/posts/<%= i.id %>">Get details</a>
    <a class="edit-btn" href="http://localhost:8080/posts/edit/<%= i.id %>">Edit</a>
    <form style="display: inline;" method="post" action="/posts/delete/<%= i.id %>?_method=DELETE">
      <button class="delete-btn">Delete</button>
    </form>
  </div>
  <% } %>

  <button class="add-btn"><a href="http://localhost:8080/posts/new">Add new post</a></button>

</body>
<%- include('includes/foot.ejs') %>